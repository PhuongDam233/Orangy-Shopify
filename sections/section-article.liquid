{{ 'section-article.css' | asset_url | stylesheet_tag }}
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section class="section-article">
    <div class="page-width section-{{ section.id }}-padding{% if section.settings.secondary_background %} isolate{% endif %}">
        <div class="container">
           {% for block in section.blocks %}
             {% comment %} Item 1 {% endcomment %}
      {% if block.type == 'imgae_article' %}
<div class="scarticle__img">
   {{ block.settings.image |image_url: width: 500|  image_tag }}
</div>
    {% endif %}

    {% if block.type == 'content_article' %}
    <div class="scarticle__content">
    <span class="desc">{{ block.settings.article_title}}</span>
    <h3 class="heading h2">{{ block.settings.article_heading}}</h3>   
    <p class="content">{{ block.settings.article_desc}}</p>
    </div>
{% endif %}
            {% endfor %}
        </div>
    </div>
</section>

{% schema  %}  
 {"name": "Article",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [{
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 100
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 100
    }],
  "blocks": [{
    "name": "Content",
	"type": "content_article",
    "settings": [{
        "type": "text",
            "id": "article_title",
            "label": "Title",
            "default": "THE TIRED MAN"
    },
{
    "type": "text",
            "id": "article_heading",
            "label": "Heading",
            "default": "Lets you sink into its plush and comforting embrace after a day."
},
{
    "type": "text",
            "id": "article_desc",
            "label": "Content",
            "default": "Considered one of Denmarkâ€™s greatest and most influential architects, Mogens Lassen pioneered Danish Functionalism, taking his cues from Bauhaus sensibilities. His interior designs are a natural continuation of his architectural approach and add energy and atmosphere to everyday living spaces and tasks. From decorative objects to larger furniture designs, his designs delicately balance presence without drawing undue attention, finding their natural place in any space."
}]
  },
  {
    "name": "Image",
	"type": "imgae_article",
    "settings": [{
        "type": "image_picker",
            "id": "image",
            "label": "Image article"
    }]
  }

],
  "presets": [
    {
      "name": "Section article"
    }
  ]
  
  }
{% endschema %}
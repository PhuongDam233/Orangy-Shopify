{{ 'section-contact.css' | asset_url | stylesheet_tag }}


{%- if section.settings.image_height == 'adapt' and section.settings.image != blank -%}
  {%- style -%}
    @media screen and (max-width: 749px) {
      #Banner-{{ section.id }}::before,
      #Banner-{{ section.id }} .banner__media::before,
      #Banner-{{ section.id }}:not(.banner--mobile-bottom) .banner__content::before {
        padding-bottom: {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;
        content: '';
        display: block;
      }
    }

    @media screen and (min-width: 750px) {
      #Banner-{{ section.id }}::before,
      #Banner-{{ section.id }} .banner__media::before {
        padding-bottom: {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;
        content: '';
        display: block;
      }
    }
  {%- endstyle -%}
{%- endif -%}

<section class="contact-service" >
    <div class="page-width section-{{ section.id }}-padding{% if section.settings.secondary_background %} isolate{% endif %} " >
        <div class="contact-inner ">
            <div class="contact_item --left">
               <div class="contact_item-img ">{{ section.settings.image_1 |image_url: width: 310|  image_tag}}</div> 
               <div class="contact_item-img ">{{ section.settings.image_2 |image_url: width: 180|  image_tag}}</div> 
               <div class="contact_item-img ">{{ section.settings.image_3 |image_url: width: 220|  image_tag}}</div> 
               </div>
            <div class="contact_item --center">
                <div class="textbox">
                    <p>{{ section.settings.desc }}</p>
                    <h2 class="heading h2-s">
                      {{ section.settings.heading }}
                    </h2>
                    <a href="#" target="_blank" class="btn btnlink">{{ section.settings.button_link }}
                        {{ section.settings.button_title }}
                    </a>
                </div>
            </div>
            <div class="contact_item --right">
               <div class="contact_item-img ">{{ section.settings.image_4 |image_url: width: 330|  image_tag}}</div> 
               <div class="contact_item-img">{{ section.settings.image_5 |image_url: width: 250|  image_tag}}</div> 
            </div>
        </div>
    </div>
</section>

{% schema %}
{
  "name": "Contact",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
    "type": "color_background",
    "id": "background",
    "label": "Background",
    "default": "#f6f2ee"
  },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Your image"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Your image"
    },
    {
      "type": "image_picker",
      "id": "image_3",
      "label": "Your image"
    },
    {
      "type": "image_picker",
      "id": "image_4",
      "label": "Your image"
    },
    {
      "type": "image_picker",
      "id": "image_5",
      "label": "Your image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "78 Trung Kinh, Yen Hoa, Cau Giay, Hanoi."
    },
 {
      "type": "text",
      "id": "desc",
      "label": "Description",
      "default": "Renovate your home AT"
    },
    {
      "type": "text",
      "id": "button_title",
      "label": "Button name",
      "default": "@orangy"
    },
    {
  "type": "url",
  "id": "button_link",
  "label": "Button link"
},
    {
      "type": "range",
      "id": "image_overlay_opacity",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "%",
      "label": "t:sections.image-banner.settings.image_overlay_opacity.label",
      "default": 0
    },
    {
      "type": "checkbox",
      "id": "show_text_box",
      "default": true,
      "label": "t:sections.image-banner.settings.show_text_box.label"
    },
    {
      "type": "header",
      "content": "t:sections.image-banner.settings.mobile.content"
    },
    {
      "type": "checkbox",
      "id": "show_text_below",
      "default": true,
      "label": "t:sections.image-banner.settings.show_text_below.label"
    }
  ],
  "presets": [
    {
      "name": "Contact"
    }
  ]
}
{% endschema %}
